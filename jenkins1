pipeline { 
  agent any;
    stages { 
       stage ('BUILD') { 
          steps {
             sh '''
                sleep 5
            echo "This is build stage"
                '''
         }
      }

      stage ('DEPLOY') { 
          parallel { Label 'Slave1' }
            steps {
               echo "This is deploy stage"
   }
}
        stage ('TEST') { 
            steps {
               echo "This is test stage"
   }
}

   }
}
    

